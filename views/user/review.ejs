<section class="pt-3">

	<div class="container">
		<div class="row">

			 
			<div class="col-lg-4 col-xl-3">
				 
				<div class="offcanvas-lg offcanvas-end" tabindex="-1" id="offcanvasSidebar" >
					 
					<div class="offcanvas-header justify-content-end pb-2">
						<button  type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
					</div>

					 
					<div class="offcanvas-body p-3 p-lg-0">
						<div class="card bg-light w-100">

							 
							<div class="position-absolute top-0 end-0 p-3">
								<a href="#" class="text-primary-hover" data-bs-toggle="tooltip" data-bs-title="Edit profile">
									<i class="bi bi-pencil-square"></i>
								</a>
							</div>

							 
							<div class="card-body p-3">
								 
								<div class="text-center mb-3">
									 
									<div class="avatar avatar-xl mb-2">
                                        <img class="avatar-img rounded-circle border border-2 border-white" src="https://i.ibb.co/TBZWn8qz/profile1.png" alt="">
									</div>
									<%if (user) { %>
                                        <h6 class="mb-0"></h6>
                                        <a href="#" class="text-reset text-primary-hover small"><%= user.email %></a>
                                        <hr>
                                        <% } %>
								</div>

								 
								<ul class="nav nav-pills-primary-soft flex-column">
									<li class="nav-item">
                                        <a class="nav-link " href="/profile"><i class="bi bi-person fa-fw me-2"></i>My Profile</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/mybooking"><i class="bi bi-ticket-perforated fa-fw me-2"></i>My Bookings</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/payment"><i class="bi bi-wallet fa-fw me-2"></i>Payment Details</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" href="/review"><i class="bi bi-heart fa-fw me-2"></i>Review</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/delete" id="delete-profile-link"><i class="bi bi-trash fa-fw me-2"></i>Delete Profile</a>
                                    </li>
								</ul>
								 
							</div>
							 
						</div>
					</div>
				</div>	
				 	
			</div>
			 

			 
			<div class="col-lg-8 col-xl-9">

				<div class="d-grid mb-0 d-lg-none w-100">
					<button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
						<i class="fas fa-sliders-h"></i> Menu
					</button>
				</div>

				 
				<div class="card border bg-dark-subtle">
					 
					<div class="card-header bg-transparent border-bottom">
						<h4 class="card-header-title">My Reviews</h4>
					</div>
					 
					<div class="card-body">
                        <% if(messages.error) { %>
                  
							<div class="alert alert-danger my-3" role="alert" id="error"> <%= messages.error %> </div>

							  
							<% } %>
						<% if(messages.success) { %>
		  
							
							<div class="alert alert-success" role="alert" id="error"> <%= messages.success %> </div>
							  
							<% } %>       
						<form class="row g-3" id="form" method="POST" action="/review" autocomplete="on"> 
							<%if (user) { %>
								
								<div class="col-md-6">
									<label class="form-label">Email address<span class="text-danger">*</span></label>
									<input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" readonly >
								</div>                                    
								<% } %>
							<div class="col-md-12">
                                <label class="form-label">Review<span class="text-danger">*</span></label>
								<textarea name="review" id="reviews" name="review" cols="30" rows="5" class="form-control"  placeholder="Enter your review"></textarea>
							</div>
							<label class="form-label">Rating<span class="text-danger">*</span></label>
							<div class="rating">
                                
								<input type="radio" id="star5" name="rating" value="5" /><label for="star5"></label>
								<input type="radio" id="star4" name="rating" value="4" /><label for="star4"></label>
								<input type="radio" id="star3" name="rating" value="3" /><label for="star3"></label>
								<input type="radio" id="star2" name="rating" value="2" /><label for="star2"></label>
								<input type="radio" id="star1" name="rating" value="1" /><label for="star1"></label>
							</div> 
							
							<div class="col-12 text-center">
                                <div><button type="submit" class="btn btn-primary w-100 mb-0">submit</button></div>
							</div>
						</form>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>